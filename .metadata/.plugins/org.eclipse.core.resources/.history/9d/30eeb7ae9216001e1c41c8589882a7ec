package selftest;

import java.util.Arrays;

public class majorityElement {
	
	public static int majorityElement(int a[], int size)  {
		int times=size/2;
		int count=0;
		int ans=0;
		Arrays.sort(a);
		for (int i=0; i<a.length; i++) {
			
			if (a.length<=1) {
				return a[i];
			}
			
			if (a[i]==a[i+1]) {
				count++;
			}
			ans=a[i];
		}
		if (count >= times) {
			return ans;
		}else {
			return -1;
		}
		
		
	}

	public static void main(String[] args) {
		int a[]= {15,16,5};
		int n=3;
		System.out.println(majorityElement(a, n));

	}

}
