package Naturalnumber;

import java.util.Scanner;

public class fib {
	
	public static void fib(int a , int b, int n) {
		if (n==0) {
			return;
		}
		int c= a+b;
		System.out.print(c);
		fib(b, a, n-1);
	}

	public static void main(String[] args) {
		Scanner s = new Scanner (System.in);
		int n = s.nextInt();
		int a =0, b=1;
		System.out.print(a+" "+b+" ");
		System.out.print(n-2);

	}

}
